
<section class="session1">
    <div class="container ">
        <div class="arrow-position">
            <a href="/"><i class='fas fa-angle-double-left ' style='font-size:25px'></i></a>
        </div>
        {{!-- <div>
            <a href=" " class="btn btn-primary">My Assignments</a>
        </div> --}}
        <div style="row">
            <div class="upload-button-wrap input-group ">
                <form class="upload-button-wrap" action="/add-assignment" method="POST" enctype="multipart/form-data" style="padding-left: 30%; width:100%;">
                    <label for="">Topic</label>
                <input required type="text" name="topic" style="display: block; height: 2.5rem;border: 3px solid;border-color: #1a015129;" placeholder="Topic"><br>
                <label class="upload-button" for="upload">File</label><br>
                <input required accept=".pdf" name="doc" id="upload" type="file" onclick="viewDoc(event)">
                <input type="submit" class="save100-form-btn ml-5" value="save">
                <input type="text" name="studentId" value="{{studentData.student._id}}" hidden>
                </form>
            </div>
        </div>
        <hr>
    <br>
        <br>

        <div>
            <h2 class="h2-table">Assignments</h2>
        </div>

        <ul class="responsive-table table-num">
            <li class="table-header">
                <div class="col col-1" style="max-width: 10%;">No</div>
                <div class="col col-2" style="max-width: 30%;">Topic</div>
                <div class="col col-3" style="max-width: 30%;">Document</div>
                <div class="col col-3" style="max-width: 15%;">Mark</div>
                <div class="col col-4" style="max-width: 15%;">Action</div>
            </li>
            {{#each data}}
            <li class="table-row" >
                <div class="col col-1" data-label="No" style="max-width: 10%;">
                    <p class="sd-name" id="num"></p>
                </div>
                <div class="col col-2" data-label="Name" style="max-width: 30%;">
                    <a href="" class="sd-name">{{this.topic}}</a>
                </div>
                <div class="col col-3" data-label="" style="max-width: 30%;"><a href="/doc/{{this._id}}"><i class="fa fa-file-pdf-o"></i></a></div>
                <div class="col col-3" data-label="" style="max-width: 15%;">{{this.mark}}</div>
                <div class="col col-4" data-label="" style="max-width: 15%;">
                    <a href="/delete-assignment/{{this._id}}"
                        onclick="return confirm('Do you want delete {{this.topic}}?')"><i class='fas fa-trash '></i></a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</section>