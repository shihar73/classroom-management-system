<style>
    #wrapper-otp {
        margin: 0 auto;
        padding: 0px;
        text-align: center;
        width: 995px;
        margin-top: 6rem;
    }

    #wrapper-otp h1 {
        margin-top: 50px;
        font-size: 45px;
        color: #54437c;
    }

    #wrapper-otp h1 p {
        font-size: 18px;
    }

    .form_div {
        width: 330px;
        margin-left: 320px;
        padding: 10px;
        background-color: #6e488d;
    }

    .form_div .form_label {
        margin: 15px;
        margin-bottom: 30px;
        font-size: 25px;
        font-weight: bold;
        color: white;
    }

    .form_div input[type="text"] {
        width: 230px;
        height: 40px;
        border-radius: 2px;
        font-size: 17px;
        padding-left: 5px;
        border: none;
        display: block;
        margin-left: 40px;
    }

    .form_div input[type="submit"] {
        width: 230px;
        height: 40px;
        border: none;
        border-radius: 2px;
        font-size: 17px;
        background-color: #263a66;
        border-bottom: 3px solid #182c4b;
        color: white;
        font-weight: bold;
        display: block;
        margin-left: 40px;
    }

    @media only screen and (min-width:700px) and (max-width:995px) {
        #wrapper-otp {
            width: 100%;
        }

        #wrapper-otp h1 {
            font-size: 30px;
        }

        .form_div {
            width: 50%;
            margin-left: 25%;
            padding-left: 0px;
            padding-right: 0px;
        }

        .form_div input[type="text"],
        input[type="password"] {
            width: 80%;
        }

        .form_div textarea {
            width: 80%;
        }

        .form_div input[type="submit"] {
            width: 80%;
        }
    }

    @media only screen and (min-width:400px) and (max-width:699px) {
        #wrapper-otp {
            width: 100%;
        }

        #wrapper-otp h1 {
            font-size: 30px;
        }

        .form_div {
            width: 60%;
            margin-left: 20%;
        }

        .form_div input[type="text"] {
            width: 80%;
        }

        .form_div input[type="submit"] {
            width: 80%;
        }
    }

    @media only screen and (min-width:100px) and (max-width:399px) {
        #wrapper-otp {
            width: 100%;
        }

        #wrapper-otp h1 {
            font-size: 25px;
        }

        .form_div {
            width: 90%;
            margin-left: 5%;
            padding-left: 0px;
            padding-right: 0px;
        }

        .form_div input[type="text"],
        input[type="password"] {
            width: 80%;
        }

        .form_div input[type="submit"] {
            width: 80%;
        }
    }
</style>
<section>
    <div id="wrapper-otp">
        <div class="form_div">
            <p class="form_label">Verify Otp</p>
            {{#if msg}}
            <p style="color: crimson;">{{msg}}</p>
            <br>
            {{/if}}
            <form method="post" action="/otp">
                <p><input type="text" placeholder="Enter otp" name="otp"></p>
                <p><input type="submit" value="Submit"></p>
            </form>
        </div>

</section>