<style>
 
</style>
<section>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('/images/bg-01.jpg');">

            <div class="wrapper">
                <div class="profile-card js-profile-card">
                    <form id="tutorFormEdit" action="/tutor/edit-profile" method="POST" enctype="multipart/form-data">
                        <div>
                            <div class="profile-card__img">
                                <img src="/images/tutor-profile-img/{{tutorData.tutor._id}}.jpg" alt="profile card"
                                    id="tutor-pro-img">
                            </div>

                            <div class="tutor-pro-img-input">
                                <button type="button" class="img-edit-icon" onclick="imgInput()">
                                    <i class="fas fa-camera" style=""></i>
                                </button>

                            </div>
                            <input type="file" name="image" id="tutor-img" onchange="viewImage(event)" accept="image/*" hidden>
                        </div>

                        <div class="profile-card__cnt js-profile-cnt">
                            <div class="profile-card__txt"> Name
                                <input class="tutor-input" type="text" value="{{tutorData.tutor.name}}" name="name">
                            </div>

                            <div class="profile-card__txt"> Subject
                                <input class="tutor-input" type="text" value="{{tutorData.tutor.subject}}"
                                    name="subject">
                            </div>

                            <div class="profile-card__txt"> Class
                                <input class="tutor-input" type="text" value="{{tutorData.tutor.class}}" name="class">
                            </div>

                            <div class="profile-card__txt"> House Name
                                <input class="tutor-input" type="text" value="{{tutorData.tutor.house}}" name="house">
                            </div>
                            <div class="profile-card__txt"> Place
                                <input class="tutor-input" type="text" value="{{tutorData.tutor.place}}" name="place">
                            </div>

                            <div class="profile-card__txt"> Pin
                                <input class="tutor-input" type="text" value="{{tutorData.tutor.pin}}" name="pin">
                            </div>
                            <div class="profile-card__txt"> MOb
                                <input class="tutor-input" type="text" value="{{tutorData.tutor.number}}" name="number">
                            </div>
                            <div class="profile-card__txt"> Email
                                <input class="tutor-input" type="email" value="{{tutorData.tutor.email}}" name="email">
                            </div>

                            <div class="container-login100-form-btn">
                                <button type="submit" class="save100-form-btn" onclick="return confirm('Do you want to save this data?')">Svae</button>
                                <a href="/tutor/profile" class="cancel100-form-btn">Cancel</a>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="dropDownSelect1"></div>
</section>

<script>
    const tutorImg = document.getElementById('tutor-img');
    function imgInput() {
        tutorImg.click()
    }
    function viewImage(event) {
        console.log(event)
        document.getElementById('tutor-pro-img').src = URL.createObjectURL(event.target.files[0])
    }



</script>