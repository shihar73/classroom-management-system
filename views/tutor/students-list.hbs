<style>

</style>
<div class="arrow-position">
    <a href="/tutor"><i class='fas fa-angle-double-left ' style='font-size:25px'></i></a>
</div>

<section class="table">
    <div class="container ">
        <div style="text-align: end;">
            <h2 class="h2-table">Students Details</h2>

            <a href="/tutor/add-student" class="btn btn-default ml-auto add-sd">Add Student</a>

        </div>

        <ul class="responsive-table">
            <li class="table-header">
                <div class="col col-1">No</div>
                <div class="col col-2">Name</div>
                <div class="col col-3"></div>
                <div class="col col-4">Actions</div>
            </li>
            {{#each students}}
            <li class="table-row">
                <div class="col col-1" data-label="No">
                     <a href="/tutor/student-profile" class="sd-name">1</a>
                </div>
                <div class="col col-2" data-label="Name">
                   <a href="/tutor/student-profile" class="sd-name">{{this.name}}</a>
                    </div>
                <div class="col col-3" data-label=""></div>
                <div class="col col-4" data-label="">
                    <a href="/tutor/edit-student"><i class='fas fa-edit'></i></a>
                    <a href="" onclick="return confirm('Do you want delete {{this.name}}?')"><i
                            class='fas fa-trash '></i></a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</section>